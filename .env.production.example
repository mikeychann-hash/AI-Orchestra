# ============================================
# AI Orchestra Production Configuration
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain configuration
DOMAIN=yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# --------------------------------------------
# OpenAI Configuration
# --------------------------------------------
OPENAI_ENABLED=true
OPENAI_API_KEY=your_production_openai_key_here
OPENAI_ORGANIZATION=
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# --------------------------------------------
# Grok (xAI) Configuration
# --------------------------------------------
GROK_ENABLED=false
GROK_API_KEY=your_production_grok_key_here
GROK_BASE_URL=https://api.x.ai/v1

# --------------------------------------------
# Ollama Configuration
# --------------------------------------------
OLLAMA_ENABLED=true
OLLAMA_HOST=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama2

# --------------------------------------------
# LLM Bridge Settings
# --------------------------------------------
LLM_DEFAULT_PROVIDER=openai
LLM_LOAD_BALANCING=round-robin
LLM_ENABLE_FALLBACK=true

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
DATABASE_TYPE=postgresql
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=ai_orchestra
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --------------------------------------------
# Redis Configuration
# --------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --------------------------------------------
# GitHub Integration
# --------------------------------------------
GITHUB_ENABLED=true
GITHUB_TOKEN=your_production_github_token_here
GITHUB_OWNER=your_org
GITHUB_REPO=your_repo

# --------------------------------------------
# Security
# --------------------------------------------
HELMET_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING
API_KEY=CHANGE_ME_STRONG_API_KEY

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/orchestra.log

# --------------------------------------------
# Monitoring
# --------------------------------------------
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --------------------------------------------
# Backup Configuration
# --------------------------------------------
AWS_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# --------------------------------------------
# Email/Notifications (optional)
# --------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@yourdomain.com

# --------------------------------------------
# Dashboard Settings
# --------------------------------------------
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws
