# ============================================
# AI Orchestra Configuration
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# --------------------------------------------
# OpenAI Configuration
# --------------------------------------------
OPENAI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=
OPENAI_BASE_URL=
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# --------------------------------------------
# Grok (xAI) Configuration
# --------------------------------------------
GROK_ENABLED=false
GROK_API_KEY=your_grok_api_key_here
XAI_API_KEY=
GROK_BASE_URL=https://api.x.ai/v1
GROK_DEFAULT_MODEL=grok-beta

# --------------------------------------------
# Ollama Configuration
# --------------------------------------------
OLLAMA_ENABLED=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2

# --------------------------------------------
# LLM Bridge Settings
# --------------------------------------------
LLM_DEFAULT_PROVIDER=openai
LLM_LOAD_BALANCING=round-robin
LLM_ENABLE_FALLBACK=true
LLM_REQUEST_TIMEOUT=60000
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1000

# --------------------------------------------
# Database Configuration
# --------------------------------------------
DATABASE_TYPE=sqlite
DATABASE_PATH=./database/memory.sqlite
DATABASE_POOL_SIZE=10

# For PostgreSQL (optional)
# DATABASE_TYPE=postgresql
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=ai_orchestra
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password_here

# --------------------------------------------
# GitHub Integration
# --------------------------------------------
GITHUB_ENABLED=false
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=
GITHUB_REPO=

# --------------------------------------------
# WebSocket Configuration
# --------------------------------------------
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=./logs/orchestra.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# --------------------------------------------
# Security
# --------------------------------------------
HELMET_ENABLED=true
API_KEY=
JWT_SECRET=your_jwt_secret_here

# --------------------------------------------
# Agent Configuration
# --------------------------------------------
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_TASK_TIMEOUT=300000
AGENT_MEMORY_LIMIT=1000

# --------------------------------------------
# Dashboard Settings
# --------------------------------------------
DASHBOARD_ENABLED=true
DASHBOARD_AUTO_REFRESH=true
DASHBOARD_REFRESH_INTERVAL=5000
