{
  "application": {
    "name": "AI Orchestra",
    "version": "0.6.0",
    "environment": "development"
  },
  "llm": {
    "providers": {
      "openai": {
        "enabled": true,
        "priority": 1,
        "models": [
          {
            "id": "gpt-4-turbo-preview",
            "name": "GPT-4 Turbo",
            "contextWindow": 128000,
            "maxOutputTokens": 4096,
            "costPer1kInput": 0.01,
            "costPer1kOutput": 0.03
          },
          {
            "id": "gpt-3.5-turbo",
            "name": "GPT-3.5 Turbo",
            "contextWindow": 16385,
            "maxOutputTokens": 4096,
            "costPer1kInput": 0.0005,
            "costPer1kOutput": 0.0015
          }
        ]
      },
      "grok": {
        "enabled": false,
        "priority": 2,
        "models": [
          {
            "id": "grok-beta",
            "name": "Grok Beta",
            "contextWindow": 100000,
            "maxOutputTokens": 4096
          }
        ]
      },
      "ollama": {
        "enabled": false,
        "priority": 3,
        "models": [
          {
            "id": "llama2",
            "name": "Llama 2",
            "contextWindow": 4096,
            "maxOutputTokens": 2048
          },
          {
            "id": "mistral",
            "name": "Mistral",
            "contextWindow": 8192,
            "maxOutputTokens": 4096
          },
          {
            "id": "codellama",
            "name": "Code Llama",
            "contextWindow": 16384,
            "maxOutputTokens": 4096
          }
        ]
      }
    },
    "defaultProvider": "openai",
    "loadBalancing": "round-robin",
    "enableFallback": true,
    "requestTimeout": 60000,
    "retryAttempts": 3,
    "retryDelay": 1000
  },
  "agents": {
    "frontend": {
      "enabled": true,
      "preferredModel": "gpt-4-turbo-preview",
      "temperature": 0.7,
      "maxTokens": 2000,
      "systemPrompt": "You are a frontend development expert specializing in React, Next.js, and modern UI frameworks."
    },
    "backend": {
      "enabled": true,
      "preferredModel": "gpt-4-turbo-preview",
      "temperature": 0.7,
      "maxTokens": 2000,
      "systemPrompt": "You are a backend development expert specializing in Node.js, Express, and API design."
    },
    "qa": {
      "enabled": true,
      "preferredModel": "gpt-4-turbo-preview",
      "temperature": 0.5,
      "maxTokens": 2000,
      "systemPrompt": "You are a QA engineer focused on writing comprehensive tests and identifying bugs."
    },
    "debugger": {
      "enabled": true,
      "preferredModel": "gpt-4-turbo-preview",
      "temperature": 0.3,
      "maxTokens": 2000,
      "systemPrompt": "You are a debugging expert skilled at identifying and resolving code issues."
    },
    "coordinator": {
      "enabled": true,
      "preferredModel": "gpt-4-turbo-preview",
      "temperature": 0.8,
      "maxTokens": 2000,
      "systemPrompt": "You are a project coordinator responsible for task distribution and agent management."
    }
  },
  "memory": {
    "enabled": true,
    "maxEntries": 1000,
    "ttl": 86400000,
    "persistToDisk": true,
    "compressionEnabled": false
  },
  "api": {
    "enabled": true,
    "basePath": "/api",
    "version": "v1",
    "endpoints": {
      "llmQuery": "/llm_query",
      "taskAssign": "/task_assign",
      "statusStream": "/status_stream",
      "agents": "/agents",
      "memory": "/memory"
    }
  },
  "dashboard": {
    "enabled": true,
    "theme": "dark",
    "autoRefresh": true,
    "refreshInterval": 5000,
    "features": {
      "agentLogs": true,
      "memoryViewer": true,
      "taskQueue": true,
      "llmMetrics": true,
      "systemStatus": true
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "colorize": true,
    "timestamp": true,
    "filePath": "./logs/orchestra.log",
    "maxFiles": 10,
    "maxSize": "10m",
    "destinations": ["console", "file"]
  },
  "security": {
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": true,
      "crossOriginEmbedderPolicy": true
    },
    "cors": {
      "enabled": true,
      "origin": ["http://localhost:3000", "http://localhost:3001"],
      "credentials": true,
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    "rateLimiting": {
      "enabled": true,
      "windowMs": 60000,
      "maxRequests": 100
    },
    "authentication": {
      "enabled": false,
      "type": "jwt",
      "expiresIn": "24h"
    }
  },
  "docker": {
    "enabled": true,
    "networks": ["ai-orchestra-network"],
    "volumes": {
      "database": "/app/database",
      "logs": "/app/logs"
    },
    "healthCheck": {
      "enabled": true,
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  }
}
