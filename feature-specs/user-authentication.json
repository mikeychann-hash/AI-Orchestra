{
  "id": "feature-auth-001",
  "name": "User Authentication System",
  "description": "Complete user authentication system with email/password login, registration, and JWT token management",
  "type": "full-stack",
  "frontend": {
    "enabled": true,
    "components": [
      {
        "name": "LoginForm",
        "description": "Login form with email and password fields, validation, and error handling",
        "type": "form"
      },
      {
        "name": "RegisterForm",
        "description": "Registration form with email, password, password confirmation, and name fields",
        "type": "form"
      },
      {
        "name": "AuthProvider",
        "description": "React context provider for managing authentication state and user data",
        "type": "component"
      }
    ],
    "styling": "tailwind",
    "framework": "react",
    "requirements": [
      "Form validation with error messages",
      "Loading states during API calls",
      "Redirect to dashboard after successful login",
      "Remember me checkbox",
      "Password visibility toggle"
    ]
  },
  "backend": {
    "enabled": true,
    "endpoints": [
      {
        "method": "POST",
        "route": "/api/auth/register",
        "description": "Register new user with email, password, and name",
        "authentication": false
      },
      {
        "method": "POST",
        "route": "/api/auth/login",
        "description": "Login user with email and password, return JWT token",
        "authentication": false
      },
      {
        "method": "POST",
        "route": "/api/auth/logout",
        "description": "Logout user and invalidate token",
        "authentication": true
      },
      {
        "method": "GET",
        "route": "/api/auth/me",
        "description": "Get current authenticated user data",
        "authentication": true
      }
    ],
    "framework": "express",
    "database": "postgresql",
    "requirements": [
      "Hash passwords using bcrypt",
      "Generate JWT tokens with expiration",
      "Validate email format",
      "Check for duplicate emails",
      "Rate limiting on login attempts"
    ]
  },
  "testing": {
    "enabled": true,
    "types": ["unit", "integration", "security"],
    "coverage": 85,
    "strictMode": true
  },
  "quality": {
    "maxQAIterations": 3,
    "autoFix": true,
    "minScore": 8
  },
  "metadata": {
    "priority": "high",
    "estimatedHours": 8,
    "tags": ["authentication", "security", "user-management"],
    "author": "AI Orchestra"
  }
}
